<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".complaints.HistoryDetails.Complaints_HistoryDetails_Networks">
<!--    android:background="@drawable/background_new"-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar_user_networks"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="History"
                app:menu="@menu/historyfilter"
                android:background="@color/cornflowerblue"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                />
        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/imageView_com_networks"-->
<!--            android:layout_width="123dp"-->
<!--            android:layout_height="102dp"-->
<!--            app:srcCompat="@drawable/mapmysona_logo"-->
<!--            tools:layout_editor_absoluteX="150dp"-->
<!--            tools:layout_editor_absoluteY="61dp" />-->

    </LinearLayout>

    <Spinner
        android:id="@+id/historyfliter_networks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:padding="4dp"
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </Spinner>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_complaints_history_networks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>