<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emergencyContact"
    android:background="@drawable/background_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Emergency Contact"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="123dp"
                android:layout_height="102dp"
                app:srcCompat="@drawable/mapmysona_logo" />
        </LinearLayout>
        <TextView
            android:id="@+id/hodcall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vigneshwaran"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            >
        </TextView>



        <TextView
            android:id="@+id/hod1call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Srisanjana"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            >
        </TextView>

        <TextView
            android:id="@+id/hod2call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Huzair"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            >
        </TextView>

        <TextView
            android:id="@+id/hod3call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shreesareen"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            >
        </TextView>

        <TextView
            android:id="@+id/hod4call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pavithra"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            >
        </TextView>

    </LinearLayout>
</LinearLayout>