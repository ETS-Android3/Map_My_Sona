                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="8"
                    android:background="@drawable/cellshape"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Installed Date"
                    android:background="@drawable/table"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ins_date_unit"
                    android:layout_width="113dp"
                    android:background="@drawable/table"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="9"
                    android:background="@drawable/cellshape"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/table"
                    android:text="Installation By"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ins_by_unit"
                    android:layout_width="113dp"
                    android:background="@drawable/table"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10"
                    android:background="@drawable/cellshape"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mobile No."
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:background="@drawable/table"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mob_unit"
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:background="@drawable/table"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </TableRow>


        </TableLayout>

        <EditText
            android:id="@+id/scan_qr_com_name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/mulish"
            android:hint="Your Name"
            android:textColorHint="@color/white">

        </EditText>

        <EditText
            android:id="@+id/scan_qr_com_mob"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/mulish"
            android:hint="Your Mobile Number"
            android:textColorHint="@color/white"
            android:inputType="number">

        </EditText>

        <EditText
            android:id="@+id/scan_qr_com_dep"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/mulish"
            android:hint="Your Department"
            android:textColorHint="@color/white">

        </EditText>

        <EditText
            android:id="@+id/complaint_Qrcode"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/mulish"
            android:hint="What is your Complaint ??"
            android:textColorHint="@color/white">

        </EditText>


        <Button
            android:id="@+id/button_complaint_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:text="SUBMIT" />

    </LinearLayout>

</ScrollView>