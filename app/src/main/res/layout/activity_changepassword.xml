<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changepassword"
    android:background="@drawable/greenbg01">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/imageView"-->
<!--            android:layout_width="141dp"-->
<!--            android:layout_height="118dp"-->
<!--            android:layout_gravity="top"-->
<!--            app:srcCompat="@drawable/sonacollegeoftechnology" />-->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="122dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="150dp"
            app:srcCompat="@drawable/ssbg8" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/changepassword">

    </com.airbnb.lottie.LottieAnimationView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cpusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:hint="Username"
        android:padding="5dp"
        app:startIconDrawable="@drawable/person"
        app:boxCornerRadiusTopEnd="@dimen/browser_actions_context_menu_min_padding"
        app:boxCornerRadiusTopStart="@dimen/browser_actions_context_menu_min_padding"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cpoldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:padding="5dp"
        android:hint="old Password"
        app:startIconDrawable="@drawable/password"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusTopEnd="@dimen/browser_actions_context_menu_min_padding"
        app:boxCornerRadiusTopStart="@dimen/browser_actions_context_menu_min_padding"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cpnewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpoldpassword"
        android:hint="New Password"
        android:padding="5dp"
        app:startIconDrawable="@drawable/password"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusTopEnd="@dimen/browser_actions_context_menu_min_padding"
        app:boxCornerRadiusTopStart="@dimen/browser_actions_context_menu_min_padding"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changepassbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpnewpassword"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/greyblue"
        android:fontFamily="@font/roboto_regular"
        android:text="Change Password"
        app:cornerRadius="50dp">

    </com.google.android.material.button.MaterialButton>



</RelativeLayout>