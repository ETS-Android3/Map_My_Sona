<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dep_wise_history"
    android:orientation="vertical"
    android:background="@drawable/background01">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar_user_networks"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Department Wise History"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_margin="15dp"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Networks"
        android:textSize="14dp"
        android:layout_marginRight="5dp"
        >

    </com.google.android.material.button.MaterialButton>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2_112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electricity"
        android:textSize="14dp"
        android:layout_marginRight="5dp">

    </com.google.android.material.button.MaterialButton>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carpenter"
        android:textSize="14dp"
        android:layout_marginRight="5dp">

    </com.google.android.material.button.MaterialButton>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/plumber_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plumber"
            android:textSize="14dp"
            android:layout_marginRight="5dp">

        </com.google.android.material.button.MaterialButton>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/painting_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Painting"
            android:textSize="14dp"
            android:layout_marginRight="5dp">

        </com.google.android.material.button.MaterialButton>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/computer_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            >

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>
</HorizontalScrollView>
</LinearLayout>