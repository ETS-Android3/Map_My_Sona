<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sonabg"
    android:layout_height="match_parent"
    tools:context=".AdminLoginPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="141dp"
            android:layout_height="118dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/sonacollegeoftechnology" />


    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/login">

    </com.airbnb.lottie.LottieAnimationView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/mapmyson" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginemailAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="375dp"
        android:hint="Email"
        android:padding="15dp"
        app:startIconDrawable="@drawable/email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginemailInputAdmin"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:fontFamily="@font/mulish"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginpasswordAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_below="@+id/loginemailAdmin"
        android:hint="Password"
        android:padding="15dp"
        app:startIconDrawable="@drawable/password"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginpasswordInputAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="@font/mulish"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbuttonAdmin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/loginpasswordAdmin"
        android:layout_centerHorizontal="true"
        android:text="Log in"
        app:cornerRadius="50dp"
        app:icon="@drawable/login"
        android:fontFamily="@font/mulish">

    </com.google.android.material.button.MaterialButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/loginbuttonAdmin">
        <TextView
            android:id="@+id/achangepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginbutton"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Change Password ?"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/elmessiri">

        </TextView>



        <TextView
            android:id="@+id/aforgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/loginbutton"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Forget Password ?"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/elmessiri">

        </TextView>

    </LinearLayout>



</RelativeLayout>